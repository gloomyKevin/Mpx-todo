    text-align: center;
  }

  .info .p {
    line-height: 1;
  }

  .info .a {
    color: inherit;
    text-decoration: none;
    font-weight: 400;
  }

  .info .a:hover {
    text-decoration: underline;
  }
</style>

<script type="application/json">
  {
    "component": true,
    "usingComponents": {
      "todo": "./todo"
    }
  }
</script>
